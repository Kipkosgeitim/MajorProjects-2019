<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4CA"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"


        >
        <TextView
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="TEAM A"
            android:fontFamily="monospace"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="monospace"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3POINTS"
            android:textColor="#FFA500"
            android:padding="16dp"
            android:onClick="addthree"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2POINTS"
            android:textColor="#FFA500"
            android:padding="16dp"
            android:onClick="addtwo"

            />
        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THROW"
            android:textColor="#FFA500"
            android:padding="16dp"
            android:onClick="addone"
            />


    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/background_dark"

        >

    </View>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
      >


        <TextView
            android:id="@+id/view11"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="TEAM B"
            android:fontFamily="monospace"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="monospace"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btn11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3POINTS"
            android:textColor="#FFA500"
            android:onClick="addthreeB"
            android:padding="16dp"
            />
        <Button
            android:id="@+id/btn22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2POINTS"
            android:textColor="#FFA500"
            android:padding="16dp"
            android:onClick="addtwoB"

            />
        <Button
            android:id="@+id/btn33"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THROW"
            android:textColor="#FFA500"
            android:padding="16dp"
            android:onClick="addoneB"
            />

    </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        android:layout_alignParentBottom="true"
        android:textAllCaps="true"
        android:onClick="resetScore"
        />
    <Button
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:layout_height="wrap_content"
        android:text="result"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="resultScore"
        />

</RelativeLayout>